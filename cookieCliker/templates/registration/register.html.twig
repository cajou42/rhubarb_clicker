{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-3xl red font-bold self-center mb-2">Register</h1>
    <div class="p-4 self-center space-y-4 bg-slate-200 rounded-md shadow-sm mt-44">
    {{ form_start(registrationForm,{
        attr: {
            class: "flex flex-col space-y-4"
        }
    }) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="mx-auto bg-red-200 hover:bg-red-500 transition duration-500 rounded-md h-10 w-28 shadow-sm">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
