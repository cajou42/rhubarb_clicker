{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="flex flex-col">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="text-xl red font-bold self-center mb-2">Please sign in</h1>
    <div class="mt-40 flex items-center space-y-2 p-4 flex-col bg-slate-200 rounded-md shadow-sm self-center">
        <label for="inputEmail self-center">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control self-center" autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control self-center" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

        <button class="mt-2 bg-red-200 hover:bg-red-500 transition duration-500 rounded-md h-10 w-28 shadow-sm" type="submit">
            Sign in
        </button>
    </div>
</form>
{% endblock %}
